<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>9</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Version>1.0.0</Version>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>wol</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <Description>Wake on LAN from command line.</Description>
    <Copyright>Minh Nguyen</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/minhhut/wol</PackageProjectUrl>
    <RepositoryUrl>git@github.com:minhhut/wol.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="nupkg\**" />
  </ItemGroup>

</Project>
